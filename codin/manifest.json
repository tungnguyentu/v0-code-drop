{
  "manifest_version": 3,
  "name": "Codin Snippet Creator",
  "version": "1.0.0",
  "description": "Create and share code snippets directly from your browser",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["clipboardWrite", "activeTab", "storage"],
  "host_permissions": ["https://codin.site/*"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
